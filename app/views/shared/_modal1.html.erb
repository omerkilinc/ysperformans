<%= turbo_frame_tag "modal1" do %>
  <div class="modal fade" tabindex="-1" data-controller="modal"
       data-action="turbo:before-render@document->modal#hideBeforeRender turbo:submit-end->modal#submitEnd">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><%= title %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" id="modal1_body">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
<% end %>