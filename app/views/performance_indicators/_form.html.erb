<%= form_for @performance_indicator, data: { controller: "form", "form-target": "form" } do |f| %>

  <div class="row mb-3">
    <div class="col">
      <%= f.label :standart_id, class: "required form-label" %>
      <%= f.select :standart_id, Standart.options_for_select, { include_blank: ""}, { class: "form-select" } %>
      <%= errors_for @performance_indicator, :standart_id %>
    </div>
    <div class="col">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
      <%= errors_for @performance_indicator, :name %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col">
      <%= f.label :business_process_id, class: "required form-label" %>
      <%= f.select :business_process_id, BusinessProcess.options_for_select, { include_blank: ""}, { class: "form-select" } %>
      <%= errors_for @performance_indicator, :business_process_id %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col">
      <%= f.label :measured_method, class: "required form-label" %>
      <%= f.select :measured_method, PerformanceIndicator.measured_method_options, { include_blank: ""}, { class: "form-select" } %>
      <%= errors_for @performance_indicator, :measured_method %>
    </div>
    <div class="col">

    </div>
  </div>

  <div class="row mb-3">
    <div class="col">
      <%= f.label :responsible_id, class: "required form-label" %>
      <%= f.select :responsible_id, User.options_for_select, { include_blank: ""}, { class: "form-select" } %>
      <%= errors_for @performance_indicator, :responsible_id %>
    </div>
    <div class="col">
      <%= f.label :department_ids, class: "required form-label" %>
      <%= f.select :department_ids, Department.options_for_select, { include_blank: "", multiple: true},
                   { class: "form-select", data: {controller: "tomselect"} } %>
      <%= errors_for @performance_indicator, :department_ids %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col">
      <%= f.label :value_parameter, class: "required form-label" %>
      <%= f.select :value_parameter, PerformanceIndicator.value_parameter_options, { include_blank: ""}, { class: "form-select" } %>
      <%= errors_for @performance_indicator, :value_parameter %>
    </div>
    <div class="col">
      <%= f.label :targeted_value, class: "form-label" %>
      <%= f.number_field :targeted_value, class: "form-control" %>
      <%= errors_for @performance_indicator, :targeted_value %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control" %>
      <%= errors_for @performance_indicator, :description %>
    </div>
  </div>



  <br>
  <br>

  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Iptal</button>
    <%= f.button class: "btn btn-primary" do %>
      <span class="show-when-enabled">Kaydet</span>
      <span class="show-when-disabled"><%= btn_disabled_animation %></span>
    <% end %>
  </div>

<% end %>