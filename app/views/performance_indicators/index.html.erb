<div class="d-grid gap-3">

  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-body d-flex justify-content-between">
          <span class="fw-bold fs-2">Performans Göstergeleri</span>

          <a href="<%= new_performance_indicator_path %>"
             class="btn btn-outline-success mt-2"
             data-turbo-frame="modal1">
            <i class='bi bi-plus-lg'></i> Yeni Gösterge
          </a>

        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-body">

          <%= search_form_for @search, url: performance_indicators_path, method: :get do |f| %>
            <table class="table table-striped table-hover table-responsive">
              <thead>
              <tr>
                <th><%= sort_link @search, :id, 'Id', {}, { remote: true, method: :get } %></th>
                <th><%= sort_link @search, :name, "Adı", {}, { remote: true, method: :get } %></th>
                <th><%= sort_link @search, :description, "Açıklama", {}, { remote: true, method: :get } %></th>
                <th><%= sort_link @search, :indicator_status, "Durum", {}, { remote: true, method: :get } %></th>
                <th class="text-end">Aksiyonlar</th>
              </tr>
              </thead>
              <tbody id="performance_indicators">
              <%= render @records %>
              </tbody>
            </table>
            <%== render partial: "shared/pagy_nav", locals: { pagy: @pagy } %>
          <% end %>

        </div>
      </div>
    </div>
  </div>

</div>
